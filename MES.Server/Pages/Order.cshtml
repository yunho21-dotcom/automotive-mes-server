@page
@model OrderModel
@{
    ViewData["Title"] = "주문 페이지";
}

<div class="text-center">
    <h1 class="display-4">주문하기</h1>
</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-success" role="alert">
                    @Model.Message
                </div>
            }
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="RequestQty" class="form-label">주문 수량</label>
                <input asp-for="RequestQty" class="form-control" type="number" min="1" />
                <span asp-validation-for="RequestQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">주문 요청</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
